@model IEnumerable<WebApplication1.Models.Student>

<table id ="myTable"class="table table-hover table-striped">
    <thead>
        <tr>
            <th> Mã sv</th>
            <th>Họ va tên</th>
            <th>Ngày sinh</th>
            <th>GIỚI TÍNH</th>
            <th>Quê quán</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.OrderBy(s=>s.Fullname))
        {
            <tr>
                <td>@item.Code</td>
                <td>@item.Fullname</td>
                <td>
                    @if (item.Birthday.HasValue)
                    {
                        @item.Birthday.Value.ToShortDateString()
                    }
                </td>
                <td>
               @if (item.Gender == true)
                   {
                     <span>Nam</span>
                   }
                 else
                 {
                   <span>Nữ</span>
                 }
                </td>
                <td>@item.Hometown</td>
                <td></td>
            </tr>
        }
    </tbody>
</table>

@section Scripts{


<link href="//cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" rel="stylesheet">
<script src="//cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#myTable').DataTable();
        });
    </script>
}